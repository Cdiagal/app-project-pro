<VBox fx:id="deleteUserVbox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="559.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.ies.puerto.controller.DeleteUserController">
    <children>
        <Pane fx:id="updatePane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="60.0" prefWidth="304.0" styleClass="updatePane" stylesheets="@styles.css">
            <children>
                <Text fx:id="deleteUSerBigLabel" layoutX="95.0" layoutY="35.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ELIMINAR USUARIO">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Text>
                <ImageView fitHeight="53.0" fitWidth="47.0" layoutX="40.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/icons8-basura-100.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>
        <Text fx:id="deleteUserTextLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="Introduzca su email para eliminar su usuario">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Text>
        <TextField fx:id="textFieldEmail" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="294.0" promptText="Introduzca su email" style="-fx-border-color: #000000;">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </TextField>
        <Text fx:id="textRepeatEmail" strokeType="OUTSIDE" strokeWidth="0.0" text="Vuelva a introducir su email">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Text>
        <TextField fx:id="textFieldRepeatEmail" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="294.0" promptText="Repita el email" style="-fx-border-color: #000000;">
