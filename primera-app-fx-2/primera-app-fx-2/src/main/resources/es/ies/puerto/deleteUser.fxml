                <Insets top="20.0" />
            </VBox.margin>
        </TextField>
        <Text fx:id="textAdviseEmail" fill="#ab0f0f" strokeType="OUTSIDE" strokeWidth="0.0">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Text>
        <Button fx:id="deleteUserButton" mnemonicParsing="false" onAction="#onClickDeleteUser" prefHeight="25.0" prefWidth="99.0" text="Eliminar">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </Button>
        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onClickExitDeleteUser" prefHeight="25.0" prefWidth="51.0" text="Salir">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
